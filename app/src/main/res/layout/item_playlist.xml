<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_playlist"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_image_playlist"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="22dp"
        android:background="@drawable/bg_tv_from_playlist"
        android:gravity="end"
        android:paddingEnd="30dp"
        android:text="@string/playlist"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/img_playlist"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_title_playlist"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/img_playlist"
        app:layout_constraintTop_toTopOf="@+id/img_playlist"/>
    <TextView
        android:id="@+id/tv_video_amount"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tv_title_playlist"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_playlist"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>